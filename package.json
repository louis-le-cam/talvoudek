{
  "name": "@louis_le_cam/talvoudek",
  "version": "0.0.9",
  "description": "A simple yet powerful data validation library for being safe manipulating data from the outside",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/",
    "./src/"
  ],
  "scripts": {
    "build": "tsup ; npx tsc --emitDeclarationOnly --declaration",
    "test": "jest --coverage"
  },
  "keywords": [
    "validation",
    "typing",
    "body"
  ],
  "author": "Louis Le Cam",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "tsup": {
    "platform": "neutral",
    "entry": ["src/index.ts"],
    "format": ["cjs", "esm", "iife"],
    "dts": true,
    "sourcemap": true,
    "clean": true
  }
}
